@model FMS.Models.tbl_ehs_codes

@{
    ViewBag.Title = "Edit EHS";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Edit EHS</h2>
<div class="bread_title">
    <div class="bread_navigation">
        <ul>
            <li>@Html.ActionLink("Home", "Index", "Home")</li>
            <li class="active">@Html.ActionLink("List of EHS", "Index")</li>
        </ul>
    </div>
</div>
<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
<p style="color: Red;">@(ViewBag.Message)</p>
@using (Html.BeginForm())
{
    @Html.ValidationSummary(true)
    <fieldset>
        <legend>EHS Details</legend>
        <div class="editor-label">
            EHS <span style="color: Red;">*</span>
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.EHSCode)
            @Html.ValidationMessageFor(model => model.EHSCode)
        </div>
        <p>
            <input type="submit" value="Save" />
        </p>
    </fieldset>
}

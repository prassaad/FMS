@model  IEnumerable<FMS.Models.GeneralClassFields>
<p style="margin-top:10px;">
No of entries @(ViewBag.ListCount) showing
</p>
@{
    decimal TotAmount = 0;
}

<table class="table table-striped table-condensed dTableR dataTable">
    <tr>
        <th>
            Date
        </th>
        <th>
            Client
        </th>
        <th>
            Vehicle Reg#
        </th>
        <th>
            Book#    
        </th>
        <th>
            Token# 
        </th>
        <th>
            Liter(s)
        </th>
        <th>
            Price/Liter
        </th>
        <th>
            Total Amount
        </th>
        <th>
            Status
        </th>
    </tr>
    @{ TotAmount = 0; }
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.Encode(item.Date1.ToString("dd/MM/yyyy"))
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Text1)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Text2)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Text3)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Text4)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Value3)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Value2)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Value4)
                @{ TotAmount += item.Value4;   }
            </td>
            <td>
                @if (item.Text5 == "DEDUCTED")
                {
                    <span class="label-success"> @item.Text5 </span>
                }
                else
                {
                    <span class="label-important"> @item.Text5 </span>
                }
            </td>
        </tr>
    }
    <tr>
        <td colspan="7">
            Total Amount
        </td>
        <td>
            @Html.Encode(String.Format("{0:N}", TotAmount))
        </td>
        <td></td>
    </tr>
</table>
<p style="float:right;">
  Generated on  @String.Format("{0:MMM , dd yyyy hh:mm tt}", DateTime.Now.ToString(new System.Globalization.CultureInfo("en-Us")))
</p>
<script type="text/javascript">
    $('#print-icon').show();
</script>
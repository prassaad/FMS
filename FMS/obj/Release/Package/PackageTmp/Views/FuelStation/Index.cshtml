@model IEnumerable<FMS.Models.tbl_fuel_stations>
@using FMS.Models
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>List of Fuel Stations</h2>
<div class="bread_title">
    <div class="bread_navigation">
        <ul>
            <li>@Html.ActionLink("Home", "Index", "Home")</li>
            @if ((bool)core.GetUserAccess(38, User.Identity.Name).Add)
            {
                <li class="active">@Html.ActionLink("Create New", "Create")</li> }
        </ul>
    </div>
</div>
<table class="table table-striped table-condensed dTableR dataTable" id="dt_a">
    <thead>
        <tr>
            <th>
                Fuel Station
            </th>
            <th>
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.FuelStation)
                </td>
                <td>
                   @if ((bool)core.GetUserAccess(38, User.Identity.Name).Edit)
                   { @Html.ActionLink("Edit", "Edit", new { id = item.ID })  }
             @if ((bool)core.GetUserAccess(38, User.Identity.Name).Delete)
             {<text> | </text> @Html.ActionLink("Delete", "Delete", new { id = item.ID })}
                </td>
            </tr>
        }
    </tbody>
</table>

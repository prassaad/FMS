@model IEnumerable<FMS.Models.tbl_designations>
@using FMS.Models
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@{
    int sno = 0;
}
<h2>List of Designations</h2>
<div class="bread_title">
    <div class="bread_navigation">
        <ul>
            <li>@Html.ActionLink("Home", "Index", "Home")</li>
             @if ((bool)core.GetUserAccess(35, User.Identity.Name).Add)
             { <li class="active">@Html.ActionLink("Create New", "Create")</li>}
        </ul>
    </div>
</div>
<table class="table table-striped table-condensed dTableR dataTable" id="dt_a">
<thead>
    <tr>
    <th style="display:none;"></th>
        <th>
            Designation
        </th>
        <th></th>
    </tr>
</thead>
<tbody>
@foreach (var item in Model) {
    <tr>
        <td style="display:none;">
                    @{ sno = sno + 1;}
                    @sno
         </td>
        <td>
            @Html.DisplayFor(modelItem => item.DisplayName)
        </td>
        <td>
            @if ((bool)core.GetUserAccess(35, User.Identity.Name).Edit)
             { @Html.ActionLink("Edit", "Edit", new { id=item.ID })    }
             @if ((bool)core.GetUserAccess(35, User.Identity.Name).Delete)
             { <text> | </text> @Html.ActionLink("Delete", "Delete", new { id = item.ID }) }
        </td>
    </tr>
}
</tbody>
</table>

@model FMS.Models.tbl_locations
@{
    ViewBag.Title = "Add Location";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2>
    Add Loction</h2>
<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
<div class="bread_title">
    <div class="bread_navigation">
        <ul>
            <li>@Html.ActionLink("Home", "Index", "Home")</li>
            <li class="lastactive">@Html.ActionLink("List of locations", "Index")</li>
        </ul>
    </div>
</div>
@using (Html.BeginForm())
{
    @Html.ValidationSummary(true)
    <fieldset>
        <legend>Add Location</legend>
        <table class="table-striped table-condensed dTableR dataTable">
            <tr>
                <td>
                    Location : <span style="color: Red;">*</span>
                </td>
                     <td>
                        @Html.EditorFor(model => model.Location)
                        @Html.ValidationMessageFor(model => model.Location)
                        <span id="errLocation" style="display: none; color: Red">Please enter Location</span>
                    </td>
                   <tr>
                    <td>
                    RouteId :<span style="color: Red">*</span>
                </td>
                    <td>
                        @Html.EditorFor(model => model.RouteId)
                        @Html.ValidationMessageFor(model => model.RouteId)
                        <span id="errRouteId" style="display: none; color: Red">Please Enter RouteId</span>
                    </td>
                </tr>
            </tr>
            <tr>
                <td colspan="2">
                    <input type="submit"  value="Create" />
                </td>
            </tr>
        </table>
    </fieldset>
}

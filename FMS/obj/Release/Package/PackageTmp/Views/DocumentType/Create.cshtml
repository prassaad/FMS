@model FMS.Models.tbl_documents

@{
    ViewBag.Title = "Add Document type";
    Layout = "~/Views/Shared/_Layout.cshtml";

}

<h2>Create</h2>

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
<div class="bread_title">
    <div class="bread_navigation">
        <ul>
            <li>@Html.ActionLink("Home", "Index", "Home")</li>
            <li class="lastactive">@Html.ActionLink("List of Document types", "Index")</li>
        </ul>
    </div>
</div>
@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)
    <fieldset>
        <legend>Add Document type</legend>
 <table class="table-striped table-condensed dTableR dataTable">
            <tr>
                <td>
                     Document Type : <span style="color:Red;">*</span>
                </td>
                <td>
                    @Html.EditorFor(model => model.DocumentType)
                    @Html.ValidationMessageFor(model => model.DocumentType)
                </td>
            </tr>
            <tr>
                <td>
                     Document Code : <span style="color:Red;">*</span>
                </td>
                <td>
                    @Html.EditorFor(model => model.DocCode)
                    @Html.ValidationMessageFor(model => model.DocCode)
                </td>
            </tr>
            <tr>
                <td>
                    Consider <small>(in invoice)</small>
                </td>
                <td>
                    @Html.CheckBox("IsConsider", false)
                </td>
            </tr>
            <tr>
                <td colspan="2">
                    <input type="submit" value="Create" />
                </td>
            </tr>
        </table>
    </fieldset>
}


@model IEnumerable<FMS.Models.tbl_ehs_details>
@using FMS.Models;
@{
    core objCore = new core();  
} 
<table class="table table-striped table-condensed dTableR dataTable">
    <tr>
        <th>
            Client
        </th>
        <th>
            Vehicle Reg#
        </th>
        <th>
            Date
        </th>
        <th>
            EHS Code
        </th>
        <th>
            EHS Amount
        </th>
        <th>
            Remark
        </th>
    </tr>

@foreach (var item in Model)
{
    <tr>
        <td>
            @objCore.GetClient((long)item.ClientID)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.VehicleRegNum)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CreatedDate)
        </td>
        <td>
            @objCore.GetEHS((long)item.EHSCodeID)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.EHSAmt)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Remark)
        </td>
    </tr>
}

</table>

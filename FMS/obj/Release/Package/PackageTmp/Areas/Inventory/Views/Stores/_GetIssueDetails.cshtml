@model IEnumerable<FMS.Models.InventoryIssuedDetail>
 @{
     double TotalQty = 0;
 }
<p><b>Product Details of Issue No.</b> <span style="color:Red;font-weight:bold;"> @(ViewBag.IssuedNo) </span></p>
<div class="row">
<div class="col-md-12">
<script runat="server" type="text/C#">
    private static decimal TotalQty = 0;
</script>
<table class="table table-striped table-bordered">
    <thead>
        <tr>
        <th>
            SNo.
        </th>
        <th>
            Issue No.
        </th>
        <th>
            Receipt No.
        </th>
        <th>
            Product
        </th>
        <th>
            Issued Dt.
        </th>
        <th>
            Issued
        </th>
         <th>
            Issued By
        </th>
    </tr>
    </thead>
    <tbody>
    @{
         TotalQty = 0;
    }
        @foreach (var item in Model)
        {  
            <tr>
        <td>
            @Html.Encode(item.Slno)
        </td>
        <td>
            @Html.Encode(item.IssueNo)
        </td>
        <td>
            @Html.Encode(item.ReceiptNo)
        </td>
        <td>
            @Html.Encode(item.ItemText)
        </td>
        <td>
            @Html.Encode(String.Format("{0:g}", item.IssuedDt.Value.ToShortDateString()))
        </td>
        <td style="text-align:right;">
            @Html.Encode(String.Format("{0:F}", item.IssuedQty))
            @{ TotalQty += (double)item.IssuedQty; }
        </td>
        <td>
            @Html.Encode(item.UserName)
        </td>
    </tr>
        }
    </tbody>
     <tfoot>
        <tr>
            <td colspan="4">
            </td>
            <td>
               <b> Total </b>
            </td>
            <td style="text-align:right;">
               <b>  @String.Format("{0:F}",TotalQty)</b>
            </td>
            <td>
            </td>
        </tr>
    </tfoot>
</table>
</div>
</div>
@model IEnumerable<FMS.Models.tbl_SuppliersMaster>
@{
    ViewBag.Title = "List of Suppliers";
    Layout = "~/Areas/Inventory/Views/Shared/_InventryLayout.cshtml";
}
<h2>
    Suppliers Details</h2>
<div class="bread_title">
    <div class="bread_navigation">
        <ul>
            <li><i class="clip-arrow-left-2"></i><a href="@Url.Action("Index", "Home", new { area = "" })" class="ctrlGoBack button_bg">
                Go Back</a> </li>
            <li class="active"> <a id="btnNewSupplier" class="button_bg" href="#" onclick="AddNewSupplierEntry()">Add New Supplier </a> </li>
        </ul>
    </div>
</div>

<div class="col-md-12">
@if(Model.Count()>0){
<table class="table table-striped table-hover table-full-width dataTable" id="dt_a">
    <thead>
        <tr>
            <th>
                Supplier Name.
            </th>
           
            <th>
                City
            </th>
            <th>
                State
            </th>
            <th>
                PinCode
            </th>
            <th>
                WebSite
            </th>
            <th>
                Phone
            </th>
            <th>
                Mobile
            </th>
            <th>
                Email
            </th>
            <th>
                Title
            </th>
            <th>
            </th>
        </tr>
</thead>
<tbody>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @item.SupplierName
            </td>
           
            <td>
                @item.City
            </td>
            <td>
                @item.State
            </td>
            <td>
                @item.PinCode
            </td>
            <td>
                @item.Website
            </td>
            <td>@item.Phone
            </td>
            <td>@item.Mobile
            </td>
            <td>@item.Email
            </td>
            <td>@item.Title1
            </td>
            <td>
                <a href="@Url.Action("Edit", "Suppliers", new { id = item.SupplierId })" class="cls_edit" title="Edit">
                </a><a href="@Url.Action("Delete", "Suppliers", new { id = item.SupplierId })"  onclick="return confirm('Are you sure want to delete this ?')"  class="cls_delete" title="Delete">
                </a>
            </td>
        </tr>
    }
    </tbody>
</table>
}
else
{
<h2>
       Suppliers List was not found.
</h2> 
}
</div>

<script type="text/javascript">
    function AddNewSupplierEntry() {
        window.location.href = '@Url.Action("Create", "Suppliers", new { area = "Inventory" })';
    }
</script>
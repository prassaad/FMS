@model IEnumerable<FMS.Models.tbl_drivers> 
@using FMS.Models;
@{
    long DriverId = -1;
    long VehicleID = ViewBag.VehicleID == 0 ? 0 : Convert.ToInt64(ViewBag.VehicleID);
    int listCount = Model.Count();

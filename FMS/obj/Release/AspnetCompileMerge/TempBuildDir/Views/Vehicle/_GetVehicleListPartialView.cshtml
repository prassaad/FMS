@model IEnumerable<FMS.Models.tbl_vehicles>
@{
    long VehicleId = -1;
}
<table class="table table-striped table-condensed dTableR dataTable" id="tbl_vehicleList">
    <tr>
        <th>
            Reg#
        </th>
        <th>
            Model
        </th>
        <th>
            Type
        </th>
        <th>
            Seater
        </th>
        <th>
            Owner/Driver
        </th>
        <th>
           Driver
        </th>
        <th>
           Profile Complete 
        </th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                <a style="color:Red;text-decoration:underline;cursor:pointer;" onclick="ViewVehicleDetails(@item.ID);">@Html.DisplayFor(modelItem => item.VehicleRegNum).ToString().ToUpper()</a>  
                @if (VehicleId == -1)
                {
                    VehicleId = item.ID;
                }
                @Html.Hidden("VehicleId", VehicleId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.tbl_vehicle_models.VehicleModelName).ToString().ToUpper()
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.tbl_vehicle_types.VehicleType).ToString().ToUpper()
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.tbl_seaters.Seater).ToString().ToUpper()
            </td>
            <td>
                @if ((bool)item.OwnerCumDriver)
                {
                         <span class="system positive">Yes</span>
                }
                else
                {
                         <span class="system negative">No</span>
                }
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SingleDoubleDriver).ToString().ToUpper()
            </td>
           <td>
                 @if ((bool)item.ProfileComplete)
                 {
                         <span class="system positive">Yes</span>
                 }
                 else
                 {
                         <span class="system negative">No</span>
                 } 
           </td>
        </tr>
    }
</table>

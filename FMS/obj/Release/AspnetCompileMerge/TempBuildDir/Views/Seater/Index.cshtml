@model IEnumerable<FMS.Models.tbl_seaters>
@using FMS.Models
@{
    ViewBag.Title = "List of Seaters";
    Layout = "~/Views/Shared/_Layout.cshtml";
    int sno = 0;
}

<h2>List of Seaters</h2>

<div class="bread_title">
                    <div class="bread_navigation">
                        <ul>
                            <li>@Html.ActionLink("Home","Index","Home")</li>
                            @if ((bool)core.GetUserAccess(31, User.Identity.Name).Add)
                            {
                            <li class="active"> @Html.ActionLink("Create New", "Create")</li> }
                        </ul>
                    </div>
            </div>
<table  class="table table-striped table-condensed dTableR dataTable" id="dt_a">
<thead>
    <tr>
    <th style="display:none;">SNo.</th>
        <th>
            Seater
        </th>
        
        <th></th>
    </tr>
    </thead>
    <tbody>
    @{sno = 0;}
@foreach (var item in Model) {
    <tr>
    <td style="display:none;">@{sno = sno + 1;} @sno</td>
        <td>
            @Html.DisplayFor(modelItem => item.Seater)
        </td>
        <td>
            @if ((bool)core.GetUserAccess(31, User.Identity.Name).Edit)
                            { @Html.ActionLink("Edit", "Edit", new { id=item.ID })  }
             @if ((bool)core.GetUserAccess(31, User.Identity.Name).Delete)
             {<text> | </text> @Html.ActionLink("Delete", "Delete", new { id = item.ID })}
        </td>
    </tr>
}
</tbody>
</table>

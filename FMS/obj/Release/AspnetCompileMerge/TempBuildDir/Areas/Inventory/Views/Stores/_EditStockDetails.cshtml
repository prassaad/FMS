@model FMS.Models.InventoryModel.StockManagement

  @Html.ValidationSummary("Edit was unsuccessful. Please correct the errors and try again.")  
@using (Html.BeginForm()) {

<div class="clsmodalheader">Edit Stock Details</div>
<div style="overflow: auto;z-index:9999;height:500px;">
 <br /><br />
 <p style="margin-top:20px;">Product: <span style="color:Green;font-weight:bold;">@Model._Regdetiail.FirstOrDefault().ItemText</span> </p>
        <table  class="table table-striped table-condensed table-bordered">
        <tr>
            <td>
                Size:
            </td>
            <td>
                @Html.TextBox("weight", String.Format("{0:F}", Model._Regdetiail.FirstOrDefault().Weight))
                @Html.ValidationMessage("weight")
            </td>
        </tr>
        <tr>
            <td>
                Available Qty:
            </td>
            <td>
                @Html.TextBox("rece_qty", String.Format("{0:F}", Model._Regdetiail.FirstOrDefault().ReceQty - (Model._Regdetiail.FirstOrDefault().IssuedSlod == null ? 0 : Model._Regdetiail.FirstOrDefault().IssuedSlod)))
                @Html.ValidationMessage("rece_qty")
            </td>
        </tr>
        <tr>
            <td>
                Amount:
            </td>
            <td>
                @Html.TextBox("rate", String.Format("{0:F}", Model._Regdetiail.FirstOrDefault().Rate))
                @Html.ValidationMessage("rate")
            </td>
        </tr>
        <tr>
            <td>
            </td>
            <td>
                <input type="submit" class="btn btn-primary"  value="Update" />
                <button type="button" id="btnCancel"  class="btn btn-primary" >
                    Cancel</button>
            </td>
        </tr>
    </table>
</div>
} 

 <script type="text/javascript">
     $('#btnCancel').click(function () {
         $.modal.close();
     });
 </script>
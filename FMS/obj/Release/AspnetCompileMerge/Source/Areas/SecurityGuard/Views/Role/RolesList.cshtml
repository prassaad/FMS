@model SecurityGuard.ViewModels.ManageRolesViewModel

@{
    ViewBag.Title = "List of Roles";
    Layout = "~/Areas/SecurityGuard/Views/Shared/_SecurityGuardLayoutPage.cshtml";
}
<div id="breadcrumb">
    @Html.ActionLink("Dashboard", "Index", "Dashboard") > List of Roles
</div>
<h2>
    List of Roles</h2>
<div class="section_inner">
    <div class="table_wrapper">
        <div class="table_wrapper_inner">
            <table cellpadding="0" cellspacing="0" width="100%">
                <thead>
                    <tr>
                        <th>
                            Role Name
                        </th>
                        <th>

                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.RoleList)
                    {
                        <tr>
                            <td>
                                @Html.Encode(item)
                            </td>
                            <td>
                                @Html.ActionLink("Manage Role Access", "GrantAccessToRoles", "RolesAccess", new { area = "SecurityGuard", role = item }, new { id = "Assign-Customer" })
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

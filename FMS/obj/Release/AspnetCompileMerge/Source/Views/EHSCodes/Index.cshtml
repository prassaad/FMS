@model IEnumerable<FMS.Models.tbl_ehs_codes>
@using FMS.Models;
@{
    ViewBag.Title = "List of EHS Codes";
    Layout = "~/Views/Shared/_Layout.cshtml";
    
}
<h2>List of EHS Codes</h2>
<div class="bread_title">
    <div class="bread_navigation">
        <ul>
            <li>@Html.ActionLink("Home", "Index", "Home")</li>
           @if ((bool)core.GetUserAccess(32, User.Identity.Name).Add)
                            {  <li class="active">@Html.ActionLink("Create New", "Create")</li> }
        </ul>
    </div>
</div>
@if (Model != null)
{
<table class="table table-striped table-condensed dTableR dataTable" id="dt_a">
<thead>
    <tr>
      
        <th>
            EHS 
        </th>
        <th></th>
    </tr>
</thead>
<tbody>
 
@foreach (var item in Model)
{
    <tr>
      
        <td>
            @Html.DisplayFor(modelItem => item.EHSCode)
        </td>
        <td>
           @if ((bool)core.GetUserAccess(32, User.Identity.Name).Edit)
             { @Html.ActionLink("Edit", "Edit", new { id = item.ID }) }
            @if ((bool)core.GetUserAccess(32, User.Identity.Name).Delete)
            {<text> | </text>  @Html.ActionLink("Delete", "Delete", new { id = item.ID }) }
        </td>
    </tr>
}
</tbody>
</table>
}
 
@model IEnumerable<FMS.Models.tbl_odometer_readings>
@using FMS.Models;
@{
    core objCr = new core(); 
}
<table class="table table-striped table-condensed dTableR">
    <tr>
        <th>
            Vehicle Reg#
        </th>
        <th>
            Mode Of Entry
        </th>
        <th>
            ODM Date
        </th>
        <th>
            Reading Value
        </th>
       
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @objCr.GetVehicleRegNumber((long)item.VehicleId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ModeOfEntry)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ODMDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ReadingValue)
            </td>
             
        </tr>
    }
</table>
<script type="text/javascript">
    function RemoveItem(ID) {
        $.ajax(
    {
        type: "POST",
        url: "../../ODOMeter/RemoveItem",
        data: "ID=" + ID,
        dataType: "html",
        success: function (result) {
            $('#divLogSheetEntryList').html(result);
        },
        error: function (error) {
            alert(error);
        }
    });
    }
</script>

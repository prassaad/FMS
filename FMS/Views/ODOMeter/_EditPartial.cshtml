    function updateReading() {
        var formColl = $("#updateForm").serialize();
        if (ValidateMsg()) {
            $('#loading').fadeIn('slow');
            $.post('/ODOMeter/Edit', formColl, function (data) {
                alert(data.msg);
                $('#loading').fadeOut('slow');
                if (data.success == true) {
                    $.modal.close();
                    window.location.reload();
                }
            });
        }
    }
    var myDate = new Date();
    var prettyDate = myDate.getDate() + '/' + (myDate.getMonth() + 1) + '/' + myDate.getFullYear();
    $("#ODMDate").datepicker({
        changeMonth: true,
        changeYear: true,
        dateFormat: 'dd/mm/yy',
        maxDate: prettyDate,
        onSelect: function () {
            $('input[tabindex="4"]').select();
        }
    });
    function ValidateMsg() {
        var modeofEntry = $("#ModeOfEntry").val();
        var odmDate = $("#ODMDate").val();
        var readingValue = $("#ReadingValue").val();
        
        if (modeofEntry == "") {
            $("#valdationMsg").show();
            $("#valdationMsg").html("Please select mode of entry");
            $("#ModeOfEntry").focus();
            return false
        }
        if (odmDate == "") {
            $("#valdationMsg").show();
            $("#valdationMsg").html('Please select odometer date.');
            $("#ODMDate").focus();
            return false;
        }
        if (readingValue == "") {
            $("#valdationMsg").show();
            $("#valdationMsg").html('Please enter reading value.');
            $("#ReadingValue").focus();
            return false;
        }
        return true;
    }
</script>
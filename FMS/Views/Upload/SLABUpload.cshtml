        $("#sheetname").change(function (e) {
            var title = isName(this.value);
            if (title == false) {
                $("#errormsg").show();
                $("#errormsg").text("Your string has special characters. \n These are not allowed.");
                document.getElementById("" + this.id + "").value = '';
                $("#" + this.id).focus();
            }
            else {
                $("#errormsg").hide();
            }
        });

  
</script>

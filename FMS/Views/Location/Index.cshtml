@model IEnumerable<FMS.Models.tbl_locations>
@{
    ViewBag.Title = "List of Locations";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@{
    int sno = 0;
}
<h2>
    List of Locations</h2>
<div class="bread_title">
    <div class="bread_navigation">
        <ul>
            <li>@Html.ActionLink("Home", "Index", "Home")</li>
              <li>@Html.ActionLink("Bulk Upload","upload","Location")</li>
            <li class="active">@Html.ActionLink("Create New", "Create")</li>
        </ul>
    </div>
</div>
 
    <table class="table table-striped table-condensed dTableR dataTable" id="dt_a">
    <thead>
        <tr>
            <th style="display:none;">SNo.</th>
            <th>
                Location
            </th>
             <th>
                RouteId
            </th>
            <th>
            
            </th>
        </tr>
    </thead>
    <tbody>
        @{sno = 0;}
        @foreach (var item in Model)
        {
            <tr>
                <td style="display:none;">
                    @{ sno = sno + 1;}
                    @sno
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Location)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.RouteId)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.ID }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.ID })
                </td>
            </tr>
        }
    </tbody>
</table>

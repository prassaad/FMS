@model FMS.Models.tbl_seaters

@{
    ViewBag.Title = "Edit Seater";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Edit Seater</h2>

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
<div class="bread_title">
                    <div class="bread_navigation">
                        <ul>
                            <li>@Html.ActionLink("Home","Index","Home")</li>
                            <li class="lastactive"> @Html.ActionLink("List of Seater", "Index")</li>
                        </ul>
                    </div>
            </div>
@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)
     <fieldset>
        <legend>Edit Seater</legend>
         <p style="color: Red; font-style: italic;">
            @(ViewBag.message)
        </p>
        <table  class="table-striped table-condensed dTableR dataTable">
            <tr>
                <td>
                    Seater : <span style="color:Red;">*</span>
                </td>
                <td>
                    @Html.TextBoxFor(model => model.Seater)
                    @Html.ValidationMessageFor(model => model.Seater)
                </td>
            </tr>
            <tr>
                <td colspan="2">
                    <input type="submit" value="Save" />
                </td>
            </tr>
        </table>
    </fieldset>
}

